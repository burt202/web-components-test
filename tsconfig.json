{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./src/js/web-components/types.d.ts"
    ],
    "target": "ES2020",
    "lib": ["ES2020", "dom"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "noErrorTruncation": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "experimentalDecorators": true
  },
  "include": ["./src/**/*", "./webpack/*"]
}
